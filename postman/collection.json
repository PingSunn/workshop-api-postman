            "item": [
                {
                    "name": "1. CREATE - Create Item",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"My First Item\",\n  \"description\": \"Hello Workshop!\"\n}"
                        },
                        "url": {
                            "raw": "{{local_endpoint}}/items",
                            "host": [
                                "{{local_endpoint}}"
                            ],
                            "path": [
                                "items"
                            ]
                        }
                    }
                },
                {
                    "name": "2. READ - Get All",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{local_endpoint}}/items",
                            "host": [
                                "{{local_endpoint}}"
                            ],
                            "path": [
                                "items"
                            ]
                        }
                    }
                },
                {
                    "name": "3. READ - Get by ID",
